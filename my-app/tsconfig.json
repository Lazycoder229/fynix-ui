{
  "compilerOptions": {
    // Language and Environment
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "noEmit": false,
    "moduleResolution": "bundler",
    
    // Type Checking
    "strict": true,
    
    // JSX Configuration
    "jsx": "preserve",
    "jsxImportSource": "@fynixorg/ui",
    "jsxFactory": "Fynix",
    "jsxFragmentFactory": "Fynix.Fragment",
    
    // Emit
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    
    // Library
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    
    // Module Resolution with npm link support
    "baseUrl": "./",
    "paths": {
      // Multi-strategy path resolution for npm link
      "@fynixorg/ui": [
        "../core/fynix/index.ts",
        "../core/dist/fynix/index.d.ts",
        "./node_modules/@fynixorg/ui"
      ],
      "@fynixorg/ui/*": [
        "../core/*",
        "../core/dist/*",
        "./node_modules/@fynixorg/ui/*"
      ],
      "@/*": ["./src/*"]
    },
    
    // Type Roots - Include core types
    "typeRoots": [
      "./node_modules/@types",
      "../core/types",
      "../core/node_modules/@types"
    ],
    
    // Include vite types explicitly
    "types": ["vite/client", "node"],
    
    // TypeScript Plugins
    "plugins": [
      {
        "name": "typescript-fynix-plugin",
        "enableForWorkspaceTypeScriptVersions": true
      }
    ],
    
    // Important for npm link and imports
    "allowArbitraryExtensions": true,
    "preserveSymlinks": true,
    "allowImportingTsExtensions": false
  },
  
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.fnx",
  ],
  
  "exclude": ["node_modules", "dist", "build"]
}
