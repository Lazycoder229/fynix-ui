//plugins/tsconfig.json
{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "../dist/plugins",
    "rootDir": ".",
    "moduleResolution": "bundler",
    "types": ["vite/client", "node"],
    "typeRoots": [
      "../node_modules/@types",
      "../node_modules",
      "../../node_modules"
    ]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
