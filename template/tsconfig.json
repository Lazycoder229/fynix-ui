{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
      "noEmit": true ,
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "jsxFactory": "Fynix",
    "jsxFragmentFactory": "Fynix.Fragment",
    "baseUrl": ".",
    "paths": {
      "fynix-core": ["fynix-core"],
      "fynix-core/*": ["fynix-core/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "../core/types"
    ],
    "types": ["fynix"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}